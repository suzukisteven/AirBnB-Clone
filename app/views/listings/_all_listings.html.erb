<h1 class="m-3">Show Listings</h1>

<% @listings.each do |listing| %>
  <div class="card d-inline-block m-3" style="width: 18rem;">
    <div id="carouselExampleFade<%= listing.id %>" class="carousel slide carousel-fade" data-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="http://placehold.it/150x150" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="http://placehold.it/140x140" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="http://placehold.it/130x130" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleFade<%= listing.id %>" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleFade<%= listing.id %>" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= listing.title %></h5>
      <p class="card-text"><%= truncate(listing.description, length: 30) %></p>
      <a href="#" class="btn btn-outline-primary btn-sm mb-3">See More</a></br>
      <p class="card-text"><i class="fas fa-users"></i> <strong>Maximum Guests:</strong> <%= listing.maximum_guests %></p>
      <p class="card-text"><i class="fas fa-dollar-sign"></i> <strong>Price per Night:</strong> <%= listing.price_per_night %> RM</p>
      <% if current_user.id == listing.user_id || current_user.moderator? %>
        <%= link_to "Edit this Listing", edit_listing_path(listing.id), class: "btn btn-warning btn-sm" %>
        <%= link_to "Delete", listing_path(listing.id), class: "btn btn-danger btn-sm", method: :delete %>
      <% end %>
      <% if current_user.superadmin? %>
        <% if listing.verified == false %>
          <%= link_to "Verify", verify_path(listing.id), method: :post, class: "btn btn-success btn-sm mt-3" %>
        <% else %>
          <%= link_to "Un-verify", verify_path(listing.id), method: :post, class: "btn btn-dark btn-sm mt-3" %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
<div class="container text-center">
  <% count = 0 %>
  <% @paginate_count.times do %>
    <% count += 1 %>
    <a class="text-center"href="/?page=<%= count %>"><%= count %></a> |
  <% end %>
</div>
