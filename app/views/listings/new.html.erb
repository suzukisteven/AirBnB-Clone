<div class="jumbotron">
  <h2 class="text-center"> Create a New Listing</h2>

  <div class="jumbotron">
    <%= form_with scope: :listing, url: listings_path, local: true do |form| %>
    <div class="text-field">
      <%= form.label :title %>
      <%= form.text_field :title, class:"form-control"%>
      <small id="emailHelp" class="form-text text-muted">*Maximum 20 characters</small></br>
    </div>

    <div class="text-area">
      <%= form.label :description %>
      <%= form.text_area :description, class:"form-control", rows:"10" %></br>
    </div>

    <label for="formControlRange">Cost per Night:</label>
    <input type="range" class="form-control-range" id="formControlRange" min="1" max="1000" value="500">
    <div class="text-field">
      <%= form.label :price %>
      <%= form.text_field :price, class:"form-control" %></br>
    </div>

    <div class="text-field">
      <%= form.label :amenities%>
      <%= form.text_field :amenities, class:"form-control" %></br>
    </div>

    <div>
      <%= form.submit "Create Listing", class:"btn btn-success"%>
    </div>
    <% end %>
  </div>

</div>
