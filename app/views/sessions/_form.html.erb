<div class="container w-50">
  <div class="jumbotron">
    <%= form_for :session, url: session_path do |form| %>
    <div class="text-field mb-2">
      <%= form.label :email %>
      <%= form.text_field :email, type: 'email', class:"form-control" %>
    </div>

    <div class="password-field">
      <%= form.label :password %>
      <%= form.password_field :password, class:"form-control" %></br>
    </div>
    <div class="container d-flex justify-content-center">
      <div class="submit-field">
        <%= form.submit "Sign in with E-mail", class:"btn btn-success d-inline mr-3"%>
      </div>

      <div class="submit-field mt-2">
        <%= link_to "Sign in with Google+", "/auth/google_oauth2", class:"btn btn-outline-primary d-inline" %>
      </div>
    </div>

    <div class="other-links mt-3 text-center">
      <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to t(".sign_up"), sign_up_path, class:"mr-2" %>
      <% end %>
      <%= link_to t(".forgot_password"), new_password_path %>
    </div>
    <% end %>
  </div>
</div>
