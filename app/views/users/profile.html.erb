<div>
  <% if @user.avatars? %>
    <% @user.avatars.each do |avatar| %>
      <%= image_tag(avatar.url) %>
    <% end %>
  <% end %>
</div>

<div class="jumbotron mt-3">
  <h1 class="display-4">Hello, <em><%= @user.first_name %> <%= @user.last_name %></em></h1>
  <p class="lead">This is your profile's dashboard. You can <strong>view your current listings and bookings</strong>, as well as <strong>edit your account information.</strong></p>
  <hr class="my-4">
  <p><strong>Email Address: </strong><%= @user.email %></p>
  <p><strong>First name: </strong><%= @user.first_name %></p>
  <p><strong>Last name: </strong><%= @user.last_name %></p>
  <% if @user.role == "superadmin" %>
    <p><strong>Account Type: </strong><span class="badge badge-dark"><%= @user.role%></span></p>
    <% elsif @user.role == "moderator" %>
      <p><strong>Account Type: </strong><span class="badge badge-warning"><%= @user.role%></span></p>
    <% else %>
      <p><strong>Account Type: </strong><span class="badge badge-primary"><%= @user.role%></span></p>
  <% end %>
  <hr class="my-4">
  <a class="btn btn-danger btn-md disabled" href="#" role="button">Delete Profile (Disabled)</a>
</div>
<%= form_for @user do |form| %>
  <%= render partial: '/users/form', object: form %>
  <%= form.submit class:"btn btn-success" %>
<% end %>
